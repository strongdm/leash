FROM debian:testing-slim

ARG NODE_MAJOR=22
ENV DEBIAN_FRONTEND=noninteractive

ARG VERSION=dev
ARG COMMIT=dev
ARG BUILD_DATE=unknown
ARG CHANNEL=main
ARG GIT_REMOTE_URL=unknown

RUN set -eux; \
    apt-get update; \
    apt-get install -y --no-install-recommends \
        ca-certificates curl wget gnupg vim zsh \
        procps htop \
        iputils-ping net-tools traceroute netcat-openbsd telnet dnsutils \
        lsof less; \
    install -d -m 0755 /etc/apt/keyrings; \
    curl -fsSL https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key | gpg --dearmor -o /etc/apt/keyrings/nodesource.gpg; \
    echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_${NODE_MAJOR}.x nodistro main" > /etc/apt/sources.list.d/nodesource.list; \
    apt-get update; \
    apt-get install -y --no-install-recommends nodejs; \
    npm install -g \
        @anthropic-ai/claude-code \
        @openai/codex \
        @google/gemini-cli \
        @qwen-code/qwen-code@latest \
        opencode-ai@latest; \
    npm install -g \
        @upstash/context7-mcp; \
    rm -rf /var/lib/apt/lists/*

LABEL org.opencontainers.image.version="v${VERSION}" \
      org.opencontainers.image.revision="${COMMIT}" \
      org.opencontainers.image.created="${BUILD_DATE}" \
      org.opencontainers.image.source="${GIT_REMOTE_URL}" \
      org.opencontainers.image.ref.name="${CHANNEL}"

CMD ["node", "--version"]
